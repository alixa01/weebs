<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Animeku</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <style>
      .my-element {
        transition: transform 0.3s ease;
      }

      .my-element:hover {
        cursor: pointer;
        transform: scale(1.02);
      }
    </style>
    <!-- Navbar -->
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <a href="/home" class="navbar-brand">Animeku</a>
        <!-- Form Search action to /search -->
        <form action="/search" method="GET" class="d-flex" role="search">
          <input
            class="form-control me-2"
            type="text"
            name="q"
            placeholder="Search Anime"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <!-- Content -->
    <div
      class="d-flex justify-content-center align-items-center flex-column mt-4 mx-5"
    >
      <div class="row row-cols-md-5 mx-0">
        <% animeData.forEach(anime => { %>
        <div class="mb-2 my-element">
          <div class="border rounded-md card">
            <img
              src="<%= anime.images.jpg.image_url %>"
              alt=""
              class="border rounded"
              style="object-fit: cover"
              height="300px"
              width="100%"
            />
            <div
              class="text-center px-4 d-flex align-items-center justify-content-center"
              style="min-height: 50px"
            >
              <h6 class="my-1"><%= anime.title %></h6>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
